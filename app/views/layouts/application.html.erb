<!DOCTYPE html>
<html>
  <head>
    <title>TwitterMin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice]%>
  <div class="notification is-primary global-notication">
  <p class="notice"><%=notice%></p>
  </div>
  <%end%>
  <% if flash[:alert]%>
  <div class="notification is-danger global-notication">
  <p class="alert"><%=alert%></p>
  
  <%end%>
  
    <%= yield %>
  </body>
</html>
